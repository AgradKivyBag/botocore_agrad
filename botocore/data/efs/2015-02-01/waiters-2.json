{
  "version": 2,
  "waiters": {
    "EfsAvailable": {
      "delay": 30,
      "operation": "DescribeFileSystems",
      "maxAttempts": 60,
      "acceptors": [
        {
          "expected": "available",
          "matcher": "pathAll",
          "state": "success",
          "argument": "FileSystems[].LifeCycleState"
        },
        {
          "expected": "deleting",
          "matcher": "pathAll",
          "state": "failure",
          "argument": "FileSystems[].LifeCycleState"
        },
        {
          "expected": "deleted",
          "matcher": "pathAll",
          "state": "failure",
          "argument": "FileSystems[].LifeCycleState"
        }
      ]
    },
    "EfsDeleted": {
      "delay": 30,
